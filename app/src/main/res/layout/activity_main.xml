<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StartedActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background" >

        <ImageView
            android:id="@+id/btn_started"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="15dp"
            android:background="@drawable/shape_btn_started" />

        <TextView
            android:id="@+id/txt_tilte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IDENTIFY PLANTS"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="190dp"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="130dp"
            android:text="You can identify the plants you don't know
through your camera"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/e2"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="90dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ewhite" />
        <ImageView
            android:id="@+id/e3"
            android:layout_width="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="90dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ewhite" />
        <ImageView
            android:id="@+id/e1"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="-30dp"
            app:srcCompat="@drawable/ewhite" />
    </FrameLayout>

</LinearLayout>